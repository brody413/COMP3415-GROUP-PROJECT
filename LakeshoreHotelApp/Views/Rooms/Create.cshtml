@model LakeshoreHotelApp.Models.Room

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.Email"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.FirstName"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PhoneNumber"></label>
                <input asp-for="Customer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BedSize" class="control-">Bed Size:</label>
                <br />
                <label>King:</label>
                <input asp-for="BedSize" class="form-control" type="radio" value="King">
                <label>Queen:</label>
                <input asp-for="BedSize" class="form-control" type="radio" value="Queen">
                <span asp-validation-for="BedSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomType" class="control-label">Room Type:</label>
                <br />
                <label>Standard Room</label>
                <input asp-for="RoomType" class="form-control" type="radio" value="0">
                <span asp-validation-for="RoomType" class="text-danger"></span>
                <label>Lake Front:</label>
                <input asp-for="RoomType" class="form-control" type="radio" value="1">
                <label>Suite</label>
                <input asp-for="RoomType" class="form-control" type="radio" value="2">
                <label>Lake Front Suite</label>
                <input asp-for="RoomType" class="form-control" type="radio" value="3">

            </div>
            <div class="form-group">
                <label asp-for="ReservationStart" class="control-label"></label>
                <input asp-for="ReservationStart" class="form-control" />
                <span asp-validation-for="ReservationStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationEnd" class="control-label"></label>
                <input asp-for="ReservationEnd" class="form-control" />
                <span asp-validation-for="ReservationEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
